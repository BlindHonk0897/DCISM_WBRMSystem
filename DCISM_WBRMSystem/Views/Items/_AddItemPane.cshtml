    <div class="md-content">
        <h3 class="theme-bg3">Input Serial No.</h3>
        <div id="">
            <div class="row">
                <div class="col-md-12" id="">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 table-responsive p-0" style="border:1px dotted gainsboro !important;height: 275px;">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th>Item No.</th>
                                <th>Serial No.</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="">
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <button class="btn btn-primary" id="" style="display:none">Save</button>
        <br />
        <button class="btn btn-primary md-close" id="" hidden>Close me!</button>
    </div>
</div>

