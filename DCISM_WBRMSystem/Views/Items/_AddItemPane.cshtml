
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Add Items</h5>
                <div class="card-header-right">
                    <div class="btn-group card-option">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="feather icon-more-horizontal"></i>
                        </button>
                        <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item full-card"><a href="#pills-add"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                            <li class="dropdown-item minimize-card"><a href="#pills-add"><spanr><i class="feather icon-minus"></i> collapse</spanr><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                            <li class="dropdown-item reload-card"><a href="#pills-add"><i class="feather icon-refresh-cw"></i> reload</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <a id="DownloadFormat" class="btn btn-outline-theme2" title="" data-toggle="tooltip" data-original-title="Download Format"><i class="fa fa-file-excel text-c-green f-24"></i>Download Format</a>
                <a id="UploadItems" class="btn btn-outline-theme2" title="" data-toggle="tooltip" data-original-title="Upload Items from Excel"><i class="fa fa-file-excel text-c-green f-24"></i>Upload Items/Equipments</a>
                <hr />
                <h5>Add item/equipment form</h5>
                <hr>
                <form method="#" action="#">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group input-group-sm">
                                <label class="form-label">Category</label>
                                <select class="form-control select2" name="Item_Category" id="Item_Category_Add_Item_Pane" tabindex="-1" style="width: 80%;">
                                </select>
                            </div>
                            <div class="form-group input-group-sm">
                                <label class="form-label">Model/Brand Name</label>
                                <input type="text" class="form-control" name="Item_Brand_Model" id="Item_Brand_Model_Add_Item_Pane" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group input-group-sm">
                                <label class="form-label">Item Name</label>
                                <input type="text" class="form-control" name="Item_Name" id="Item_Name_Add_Item_Pane" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            </div>
                            <div class="form-group input-group-sm">
                                <label class="form-label">Date Acquisition</label>
                                <input type="text" readonly class="form-control" name="Date_Acquisition" id="Date_Acquisition_Add_Item_Pane" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group input-group-sm">
                                <label class="form-label">Quantity</label>
                                <input type="number" class="form-control" onkeydown="if(event.key==='.'){event.preventDefault();}" oninput="event.target.value = event.target.value.replace(/[^0-9]*/g,'');" name="Quantity" id="Quantity_Add_Item_Pane" aria-label="Small" aria-describedby="inputGroup-sizing-sm" min="1" value="1" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group input-group-sm">
                                <label class="form-label">Serial No.</label>
                                <input type="text" class="form-control" name="Serial_No" id="Serial_No_Add_Item_Pane" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group input-group-sm">
                                <label class="form-label">Condition</label>
                                <select class="form-control select2" name="Condition" id="Condition_Add_Item_Pane" style="width: 100%;">
                                    <option value="Functional">Functional</option>
                                    <option value="Damaged">Damaged</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary btn-sm" id="OK_Button_Add_Item_Pane">OK</button>
                </form>
            </div>
        </div>
    </div>
</div>


@* Modal *@
