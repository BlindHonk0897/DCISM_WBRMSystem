<div class="report-wrapper">
    <div class="auth-content">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="mb-4">Generate Report</h5>
                <div class="btn-group btn-group-toggle btn-auth-gen mb-4" data-toggle="buttons">
                    <label class="btn btn-outline-theme2 btn-icon" id="PDF_Box">
                        <input type="radio" name="options" id="option1" checked=""><span><i class="fa fa-file-pdf" style="color:red"></i><small class="d-block">PDF</small></span>
                    </label>
                    <label class="btn btn-outline-theme2 btn-icon active" id="Excel_Box">
                        <input type="radio" name="options" id="option2"> <span><i class="fa fa-file-excel" style="color:green"></i><small class="d-block">Excel</small></span>
                    </label>
                </div>
                <div class="input-group mb-3">
                    <select class="form-control" id="Report_Options">
                        <option value="X">-- Choose Type of Report --</option>
                        <option>Inventory of Items</option>
                        <option>Borrowed Items</option>
                        <option>Damaged Items</option>
                        @*<option>History of Items</option>*@
                    </select>
                </div>
                <button class="btn btn-primary mb-4 shadow-2" id="Generate_Report_But">Generate</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $('#pnotify-dynamicYT').click(function () {
            $('#DownloadReport').click();
        });

        $('#Report_Options').change(function () {

        })

        $('#Generate_Report_But').click(function () {

            var choosen = $('#Report_Options').val();

            if (choosen === "Borrowed Items") {
                if ($('#Excel_Box').hasClass('active')) {
                    location.href = '/Report/BorrowedItems_Excel';
                } else {
                    location.href = '/Report/BorrowedItems_PDF';
                }
            } else if (choosen === "Damaged Items") {
                if ($('#Excel_Box').hasClass('active')) {
                    location.href = '/Report/DamagedItems_Excel';
                } else {
                    location.href = '/Report/DamagedItems_PDF';
                }
            } else if (choosen ==="Inventory of Items") {
                if ($('#Excel_Box').hasClass('active')) {
                    location.href = '/Report/InventoryOfItems';
                } else {
                    location.href = '/Report/InventoryOfItems_PDF';
                }
            }
        })

    </script>
}


