
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Requests</h5>

                <div class="card-header-right">
                    <div class="btn-group card-option">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="feather icon-more-horizontal"></i>
                        </button>
                        <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item full-card"><a href="#pills-release-item-request"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                            <li class="dropdown-item minimize-card"><a href="#pills-release-item-request"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                            <li class="dropdown-item reload-card"><a href="#pills-release-item-request"><i class="feather icon-refresh-cw"></i> reload</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-md-2">
                        @*<a class="page-link" href="#pills-release-item-request" id="ReleaseAll">Release All</a>*@
                    </div>
                    <div class="col-md-2">
                        @*<a href="#pills-release-item-request" class="page-link text-c-red" id="DiscardAll" style="color:red">Discard All</a>*@
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <input type="text" id="Search-Item-For-Released" class="form-control add_task_todo" autofocus placeholder="Search / Scan here. ..">
                        </div>
                    </div>
                </div>
                <div class="table-responsive" style="border:1px dotted gainsboro !important;height: 275px;">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Request #</th>
                                <th>Requestor</th>
                                <th>Date Requested</th>
                                <th>Purpose</th>
                                <th>Status</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody id="table-for-released">
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modal-cart-for-released" style="display: none;" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="header-details-release"></h4>
                <input type="text" id="hiddenRequestorFullName" hidden/>
                <input type="text" id="hiddenCountForReleaseItems" hidden/>
                <input type="text" id="hiddenIsDiscardItemClicked" hidden/>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="x-close-release" hidden>
                    <span aria-hidden="true">×</span>
                </button>
                @Html.AntiForgeryToken()
                <button type="button" class="close" aria-label="Close" id="x-close-modal-release">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        @*<a class="page-link" href="#pills-release-item-request" id="ReleaseAll">Release All</a>*@
                    </div>
                    <div class="col-md-2">
                        @*<a href="#pills-release-item-request" class="page-link text-c-red" id="DiscardAll" style="color:red">Discard All</a>*@
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <input type="text" id="Scan-item-to-release" class="form-control add_task_todo" autofocus placeholder="Scan Here . ..">
                        </div>
                    </div>
                </div>

                <div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Expected Return Date</th>
                                    <th>Condition</th>
                                    <th>Remarks</th>
                                    <th>Scanned</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody id="table-for-release-cart-items">
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                @*@using (Html.BeginForm("Delete", "OPDReceipts", FormMethod.Post))
