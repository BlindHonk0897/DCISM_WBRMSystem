                            <input type="button" value="Delete" id="Delete" class="btn btn-primary" /> |
                            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
                        </div>
                    }*@
            </div>
        </div>

    </div>
</div>