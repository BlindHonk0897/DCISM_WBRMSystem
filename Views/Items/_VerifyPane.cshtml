<div class="modal fade" id="modal-Verify" style="display: none;" aria-hidden="true" @*data-backdrop="static" data-keyboard="false"*@>
    <div class="modal-dialog modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Verify Item</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="x-close-verify">
                    <span aria-hidden="true">×</span>
                </button>
                <input type="text" class="form-control" id="Barcode_modal_Verify" placeholder="Barcode" hidden>
            </div>
            <div class="modal-body">
                <form>
                    <input type="text" id="Id_Item_modal_Verify" hidden />
                    <input type="text" id="Serial_Fixed_modal_Verify" hidden />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Item_Name_modal_Verify">Item Name</label>
                            <input type="text"readonly class="form-control" id="Item_Name_modal_Verify" placeholder="Item Name">
                        </div>
                        <div class="form-group col-md-6" id="Barcode_Image_Verify">
                            
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Brand_Model_modal_Verify">Brand/Model</label>
                            <input type="text" readonly class="form-control" id="Brand_Model_modal_Verify" placeholder="Brand/Model">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Serial_Number_modal_Verify">Serial Number</label>
                            <input type="text" class="form-control" id="Serial_Number_modal_Verify" placeholder="Serial Number">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Category_modal_Verify">Category</label>
                            <input type="text" readonly class="form-control" id="Category_modal_Verify" placeholder="Category">                       
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Price_modal_Verify">Room No</label>
                            <input type="text" readonly class="form-control" id="Room_modal_Verify" placeholder="Room">
                        </div>
                    </div>
                   
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-rounded btn-success" id="submit-Verify">OK</button>
            </div>
        </div>

    </div>
</div>